                    ScaleSweepAngle="270"
                                                    
                    PointerLength="37" 
                    PointerCapRadius="11"
                    PointerThickness ="3"

                    MinValue="0" 
                    MaxValue="100" 
                    MajorDivisionsCount="6" 
                                        
