                    OptimalRangeEndValue="90"
                                                    
                    RangeIndicatorThickness="8"
                    RangeIndicatorRadius="50"                                                    
                    ScaleLabelFontSize="12"
                                                    
                    DialTextOffset="45"
                    DialText="CPU 1" FontSize="16"
                  />
