        </Grid>


        <Grid Visibility="{Binding UnitDetailsVisibility, FallbackValue=Collapsed}" Grid.ColumnSpan="6" Grid.RowSpan="5">
            <Grid Background="White" Opacity="0.2"/>
            <Border Height="370" Width="650"  Background="{StaticResource GroupBoxBackground}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="UNIT INFO" Style="{StaticResource GroupBoxHeaderTextBlockStyle}" Foreground="White" VerticalAlignment="Center"  FontSize="16"/>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="27"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>


                        </Grid.RowDefinitions>
                        <TextBlock Text="UNIT NAME" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedUnit.Name, FallbackValue=#INIT 1}" Grid.Row="1" Grid.Column="1" FontSize="15" Height="30" />
                        <TextBlock Text="NOTES" Grid.Row="0" Grid.Column="3" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedUnit.Notes, FallbackValue=#NOTES}" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="7" FontSize="15" Height="30" />

                        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Controls:ToggleSwitchButton  Width="50" Height="28" Margin="-5,0,2,0" IsChecked="{Binding Path=SelectedUnit.Active, FallbackValue=True}"/>
                            <TextBlock Text="IS ACTIVE" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="CPU 1 NAME" Grid.Row="2" Grid.Column="1"   VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp1.Name, FallbackValue=#CPU1}" Grid.Row="3" Grid.Column="1" FontSize="15" Height="30"/>
                        <TextBlock Text="HOST IP" Grid.Row="2" Grid.Column="3" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp1.IP, FallbackValue=#192.168.10.236}" Grid.Row="3" Grid.Column="3" Height="30" FontSize="15"/>
                        <TextBlock Text="USERNAME" Grid.Row="2" Grid.Column="5" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp1.Username, FallbackValue=#mainuser}" Grid.Row="3" Grid.Column="5" FontSize="15" Height="30"/>
                        <TextBlock Text="PASSWORD" Grid.Row="2" Grid.Column="7" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp1.Password, FallbackValue=#mainuser}" Grid.Row="3" Grid.Column="7" FontSize="15" Height="30" />
                        <TextBlock Text="SCANNER" Grid.Row="2" Grid.Column="9" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <ComboBox Grid.Row="3" Grid.Column="9" FontSize="16" Height="30" ItemsSource="{Binding Path=Units}" SelectedItem="{Binding Path=SelectedUnit}" />
                        <StackPanel Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Controls:ToggleSwitchButton  Width="50" Height="28" Margin="-5,0,2,0" IsChecked="{Binding Path=SelectedComp1.Active, FallbackValue=True}"/>
                            <TextBlock Text="IS ACTIVE" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                        </StackPanel>


                        <TextBlock Text="CPU 2 NAME" Grid.Row="4" Grid.Column="1"   VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp2.Name, FallbackValue=#CPU2}" Grid.Row="5" Grid.Column="1" FontSize="15" Height="30"/>
                        <TextBlock Text="HOST IP" Grid.Row="4" Grid.Column="3" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp2.IP, FallbackValue=#192.168.10.235}" Grid.Row="5" Grid.Column="3" Height="30" FontSize="15"/>
                        <TextBlock Text="USERNAME" Grid.Row="4" Grid.Column="5" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp2.Username, FallbackValue=#mainuser}" Grid.Row="5" Grid.Column="5" FontSize="15" Height="30"/>
                        <TextBlock Text="PASSWORD" Grid.Row="4" Grid.Column="7" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <TextBox Text="{Binding Path=SelectedComp2.Password, FallbackValue=#mainuser}" Grid.Row="5" Grid.Column="7" FontSize="15" Height="30" />
                        <TextBlock Text="SCANNER" Grid.Row="4" Grid.Column="9" Margin="0,0"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}"/>
                        <ComboBox Grid.Row="5" Grid.Column="9" FontSize="16" Height="30" ItemsSource="{Binding Path=Units}" SelectedItem="{Binding Path=SelectedUnit}" />
                        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
                            <Controls:ToggleSwitchButton  Width="50" Height="28" Margin="-5,0,2,0" IsChecked="{Binding Path=SelectedComp2.Active, FallbackValue=False}"/>
                            <TextBlock Text="IS ACTIVE" Style="{DynamicResource GroupBoxHeaderTextBlockStyle}" VerticalAlignment="Center"/>
                        </StackPanel>


                        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="9" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                            <Button Content="SET ARFCN" Command="{Binding Path=Attach}" Width="85"/>
                            <Button Content="SAVE" Command="{Binding Path=Save}"  Margin="30,0,10,0" Width="85"/>
                            <Button Content="{DynamicResource Close}" Command="{Binding Path=CloseUnitDetails}" IsDefault="True" Width="85"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </Border>
        </Grid>


    </Grid>
</UserControl>
